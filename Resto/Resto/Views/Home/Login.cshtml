@model Resto.Models.CustomerLogin

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_CustomerRegisterLayout.cshtml";
}

<div class="container col-md-6 p-5 mt-3 cus-register">

    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal px-5">
            <h5>Login to Your Account</h5>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label class="control-label col-md-6">
                    <i class="bi bi-envelope-fill"></i> Email
                </label>
                <div class="col">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    <p class="text-danger">@ViewBag.ErrorLoginEmail</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-6">
                    <i class="bi bi-file-lock2-fill"></i> Password
                </label>
                <div class="col">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    <p class="text-danger">@ViewBag.ErrorLoginPass</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Login" class="btn btn-dark" />
                </div>
            </div>
            <div class="col-md-6">
                @Html.ActionLink("Create new Account", "Register")
            </div>
        </div>
    }


</div>